<h1>User Details</h1>


<div class="card user-details">
  <h5 class="card-header"><%= @user.full_name %></h5>
  <div class="card-body">
    <p><strong>Email: </strong> <%= @user.email %></p>
    <p>
      <% if current_user.not_friends_with?(@user.id) %>
      <%= link_to 'Follow', friendships_path(friend: @user), class: "btn btn-sm btn-success", method: :post %>
      <% else %>
      <span class="badge badge-secondary">You are friends</span>
      <% end %>
    </p>
  </div>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list' %>
<% else %>
  <p class="lead">This user is not tracking any stocks</p>
<% end %>

